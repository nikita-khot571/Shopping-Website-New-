{
  "name": "shopzone-ecommerce",
  "version": "1.0.0",
  "description": "Full-stack e-commerce website with GraphQL, TypeScript, and MySQL",
  "main": "server/index.ts",
  "type": "commonjs",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "nodemon --exec node --loader ts-node/esm server/index.ts",
    "client:dev": "live-server public --port=3000",
    "build": "npm run client:build && npm run server:build",
    "client:build": "tsc && npm run copy:assets",
    "server:build": "tsc --project tsconfig.server.json",
    "copy:assets": "cp -r public/* dist/public/",
    "start": "node dist/server/index.js",
    "db:migrate": "node --loader ts-node/esm server/database/migrate.ts",
    "db:seed": "ts-node server/database/seed.ts",
    "db:reset": "npm run db:migrate && npm run db:seed",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint . --ext .ts,.js",
    "lint:fix": "eslint . --ext .ts,.js --fix"
  },
  "keywords": [
    "ecommerce",
    "graphql",
    "typescript",
    "mysql",
    "apollo",
    "bootstrap",
    "shopping-cart"
  ],
  "author": "ShopZone Team",
  "license": "MIT",
  "dependencies": {
    "@types/express": "^5.0.3",
    "apollo-server-express": "^3.13.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.21.2",
    "graphql": "^16.6.0",
    "graphql-tag": "^2.12.6",
    "jsonwebtoken": "^9.0.0",
    "mysql2": "^3.2.0",
    "pg": "^8.16.3",
    "sequelize": "^6.29.3",
    "stripe": "^11.16.0",
    "uuid": "^9.0.0",
    "validator": "^13.9.0",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.13",
    "@types/jest": "^29.5.0",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/node": "^18.15.11",
    "@types/pg": "^8.15.5",
    "@types/uuid": "^9.0.1",
    "@types/validator": "^13.7.14",
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.57.1",
    "concurrently": "^7.6.0",
    "eslint": "^8.37.0",
    "jest": "^29.5.0",
    "live-server": "^1.2.2",
    "nodemon": "^2.0.22",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/shopzone/ecommerce.git"
  },
  "bugs": {
    "url": "https://github.com/shopzone/ecommerce/issues"
  },
  "homepage": "https://shopzone.com"
}
