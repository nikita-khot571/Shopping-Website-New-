{
  "name": "shopzone-ecommerce",
  "version": "1.0.0",
  "description": "Simplified e-commerce with GraphQL and MySQL",
  "main": "server/index.js",
  "type": "commonjs",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "nodemon --exec ts-node server/index.ts",
    "client:dev": "live-server public --port=3000",
    "build": "tsc",
    "start": "node dist/server/index.js",
    "db:setup": "ts-node server/database/setup.ts"
  },
  "dependencies": {
    "@apollo/sandbox": "^2.7.2",
    "apollo-server-express": "^3.13.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.1",
    "express": "^4.21.2",
    "graphql": "^16.8.1",
    "jsonwebtoken": "^9.0.2",
    "mysql2": "^3.15.1",
    "sequelize": "^6.37.7",
    "uuid": "^10.0.0",
    "validator": "^13.11.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.7.9",
    "@types/nodemailer": "^6.4.20",
    "@types/sequelize": "^4.28.20",
    "@types/uuid": "^10.0.0",
    "@types/validator": "^13.12.2",
    "concurrently": "^9.0.1",
    "live-server": "^1.2.0",
    "nodemailer": "^7.0.6",
    "nodemon": "^3.1.7",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3"
  }
}
